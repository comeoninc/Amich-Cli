{
  "entrypoint": "index.html",
  "shell": "src/amich-app.js",
  "sources": [
  "data/**/*",
  "images/**/*",
  "src/**/*"
  ],
  "extraDependencies": [
  "manifest.json",
    "node_modules/@webcomponentsjs/**",
    "node_modules/@webcomponents/webcomponentsjs/*.js",
    "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
    "node_modules/@webcomponents/webcomponentsjs/bundles/*.js"
  ],
  "builds": [
    {
      "name": "esm",
      "browserCapabilities": [
        "es2015",
        "modules"
      ],
      "js": {
	"compile": true,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addPushManifest": true,
      "addServiceWorker": true,
      "swPrecacheConfig": "sw-precache-config.js", 
      "insertPrefetchLinks": true
    },
    {
      "name": "es6",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    },
    {
      "name": "es5",
      "js": {
        "minify": true,
        "compile": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}